<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>تسجيل الدخول - لوحة التحكم</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    :root {
      --primary-color: #3498db;
      --primary-light: #5dade2;
      --secondary-color: #2c3e50;
      --accent-color: #e74c3c;
      --accent-light: #ec7063;
      --light-color: #f8f9fa;
      --dark-color: #343a40;
      --success-color: #2ecc71;
      --success-light: #58d68d;
      --border-radius: 12px;
      --box-shadow: 0 6px 15px rgba(0, 0, 0, 0.08);
      --transition: all 0.3s ease;
      --gradient: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    }

    /* الوضع الفاتح */
    [data-theme="light"] {
      --bg-color: #f5f7fa;
      --bg-secondary: #ffffff;
      --text-color: #343a40;
      --text-secondary: #6c757d;
      --border-color: #e9ecef;
      --header-bg: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
      --card-shadow: 0 6px 15px rgba(0, 0, 0, 0.08);
      --input-bg: #f8f9fa;
    }

    /* الوضع المظلم */
    [data-theme="dark"] {
      --bg-color: #1a1d23;
      --bg-secondary: #2d333b;
      --text-color: #e9ecef;
      --text-secondary: #adb5bd;
      --border-color: #444c56;
      --header-bg: linear-gradient(135deg, #1e3a5f, #0d1b2a);
      --card-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
      --input-bg: #3b424c;
    }
    
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      transition: background-color 0.3s ease, color 0.3s ease;
    }
    
    body {
      background-color: var(--bg-color);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 20px;
      color: var(--text-color);
      position: relative;
      overflow: hidden;
    }

    /* خلفية متحركة */
    .background-animation {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: -1;
      opacity: 0.1;
    }

    .circle {
      position: absolute;
      border-radius: 50%;
      background: var(--primary-color);
      animation: float 15s infinite ease-in-out;
    }

    .circle:nth-child(1) {
      width: 150px;
      height: 150px;
      top: 10%;
      left: 10%;
      animation-delay: 0s;
    }

    .circle:nth-child(2) {
      width: 100px;
      height: 100px;
      top: 60%;
      left: 80%;
      animation-delay: 2s;
      background: var(--success-color);
    }

    .circle:nth-child(3) {
      width: 200px;
      height: 200px;
      top: 80%;
      left: 20%;
      animation-delay: 4s;
      background: var(--accent-color);
    }

    @keyframes float {
      0%, 100% {
        transform: translateY(0) translateX(0);
      }
      25% {
        transform: translateY(-20px) translateX(10px);
      }
      50% {
        transform: translateY(10px) translateX(-20px);
      }
      75% {
        transform: translateY(-15px) translateX(-10px);
      }
    }
    
    .login-container {
      width: 100%;
      max-width: 480px;
      background-color: var(--bg-secondary);
      border-radius: var(--border-radius);
      box-shadow: var(--card-shadow);
      overflow: hidden;
      position: relative;
      z-index: 1;
      animation: fadeIn 0.8s ease;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
    
    .login-header {
      background: var(--header-bg);
      color: white;
      padding: 35px 30px;
      text-align: center;
      position: relative;
      overflow: hidden;
    }

    .login-header::before {
      content: '';
      position: absolute;
      top: 0;
      right: 0;
      width: 100%;
      height: 100%;
      background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" preserveAspectRatio="none"><path d="M0,0 L100,0 L100,100 Z" fill="rgba(255,255,255,0.1)"/></svg>');
      background-size: cover;
      pointer-events: none;
    }
    
    .login-header h1 {
      font-size: 2rem;
      margin-bottom: 12px;
      font-weight: 700;
      position: relative;
    }
    
    .login-header p {
      font-size: 1.1rem;
      opacity: 0.9;
      max-width: 300px;
      margin: 0 auto;
    }
    
    .login-form {
      padding: 40px 30px;
    }
    
    .form-group {
      margin-bottom: 25px;
    }
    
    .form-group label {
      display: block;
      margin-bottom: 10px;
      font-weight: 600;
      color: var(--text-color);
      font-size: 1rem;
    }
    
    .input-with-icon {
      position: relative;
    }
    
    .input-with-icon i {
      position: absolute;
      top: 50%;
      right: 18px;
      transform: translateY(-50%);
      color: var(--text-secondary);
      transition: var(--transition);
    }
    
    .input-with-icon input {
      padding-right: 55px;
    }
    
    .form-group input {
      width: 100%;
      padding: 18px;
      border: 2px solid var(--border-color);
      border-radius: var(--border-radius);
      font-size: 1.1rem;
      transition: var(--transition);
      background-color: var(--input-bg);
      color: var(--text-color);
    }
    
    .form-group input:focus {
      border-color: var(--primary-color);
      outline: none;
      box-shadow: 0 0 0 4px rgba(52, 152, 219, 0.15);
      background-color: var(--bg-secondary);
    }

    .form-group input:focus + i {
      color: var(--primary-color);
      transform: translateY(-50%) scale(1.1);
    }
    
    .login-btn {
      background: var(--gradient);
      color: white;
      border: none;
      padding: 18px;
      border-radius: var(--border-radius);
      font-size: 1.2rem;
      font-weight: bold;
      cursor: pointer;
      transition: var(--transition);
      width: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 12px;
      box-shadow: 0 4px 10px rgba(52, 152, 219, 0.3);
      margin-top: 10px;
    }
    
    .login-btn:hover {
      transform: translateY(-3px);
      box-shadow: 0 8px 15px rgba(52, 152, 219, 0.4);
    }

    .theme-toggle {
      position: absolute;
      top: 20px;
      left: 20px;
      background-color: rgba(255, 255, 255, 0.2);
      color: white;
      border: none;
      width: 45px;
      height: 45px;
      border-radius: 50%;
      cursor: pointer;
      transition: var(--transition);
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.2rem;
      z-index: 2;
    }
    
    .theme-toggle:hover {
      background-color: rgba(255, 255, 255, 0.3);
      transform: rotate(30deg);
    }
    
    .login-footer {
      text-align: center;
      margin-top: 25px;
      color: var(--text-secondary);
      font-size: 0.9rem;
      padding: 20px;
      border-top: 1px solid var(--border-color);
    }

    .pulse {
      animation: pulse 2s infinite;
    }
    
    @keyframes pulse {
      0% {
        transform: scale(1);
      }
      50% {
        transform: scale(1.05);
      }
      100% {
        transform: scale(1);
      }
    }
    
    @media (max-width: 576px) {
      .login-header h1 {
        font-size: 1.7rem;
      }

      .login-header {
        padding: 25px 20px;
      }

      .login-form {
        padding: 30px 20px;
      }

      .theme-toggle {
        top: 15px;
        left: 15px;
        width: 40px;
        height: 40px;
      }
    }
  </style>
</head>
<body data-theme="light">
  <!-- خلفية متحركة -->
  <div class="background-animation">
    <div class="circle"></div>
    <div class="circle"></div>
    <div class="circle"></div>
  </div>

  <div class="login-container">
    <div class="login-header">
      <button class="theme-toggle" id="themeToggle">
        <i class="fas fa-moon"></i>
      </button>
      <h1>تسجيل دخول المسؤول</h1>
      <p>لوحة تحكم معمل التحاليل الطبية</p>
    </div>
    
    <form class="login-form" method="POST" action="/admin/login">
      <div class="form-group">
        <label for="username">اسم المستخدم</label>
        <div class="input-with-icon">
          <input type="text" id="username" name="username" placeholder="أدخل اسم المستخدم" required>
          <i class="fas fa-user"></i>
        </div>
      </div>
      
      <div class="form-group">
        <label for="password">كلمة المرور</label>
        <div class="input-with-icon">
          <input type="password" id="password" name="password" placeholder="أدخل كلمة المرور" required>
          <i class="fas fa-lock"></i>
        </div>
      </div>
      
      <button type="submit" class="login-btn pulse">
        <i class="fas fa-sign-in-alt"></i> دخول
      </button>
    </form>
    
    <div class="login-footer">
      <p>© 2025 معمل بواسطة جون. جميع الحقوق محفوظة.</p>
    </div>
  </div>

  <script>
    // تبديل الوضع المظلم/الفاتح
    const themeToggle = document.getElementById('themeToggle');
    const body = document.body;
    
    themeToggle.addEventListener('click', () => {
      const currentTheme = body.getAttribute('data-theme');
      const newTheme = currentTheme === 'light' ? 'dark' : 'light';
      
      body.setAttribute('data-theme', newTheme);
      
      // تحديث الأيقونة
      const icon = themeToggle.querySelector('i');
      if (newTheme === 'dark') {
        icon.classList.remove('fa-moon');
        icon.classList.add('fa-sun');
      } else {
        icon.classList.remove('fa-sun');
        icon.classList.add('fa-moon');
      }
      
      // حفظ التفضيل في التخزين المحلي
      localStorage.setItem('theme', newTheme);
    });
    
    // تحميل التفضيل المحفوظ
    document.addEventListener('DOMContentLoaded', () => {
      const savedTheme = localStorage.getItem('theme') || 'light';
      body.setAttribute('data-theme', savedTheme);
      
      const icon = themeToggle.querySelector('i');
      if (savedTheme === 'dark') {
        icon.classList.remove('fa-moon');
        icon.classList.add('fa-sun');
      }
    });
  </script>
</body>
</html>
