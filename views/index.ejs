<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>معمل تحاليل - إدخال رقم الهاتف</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    :root {
      --primary-color: #3498db;
      --primary-light: #5dade2;
      --secondary-color: #2c3e50;
      --accent-color: #e74c3c;
      --accent-light: #ec7063;
      --light-color: #f8f9fa;
      --dark-color: #343a40;
      --success-color: #2ecc71;
      --success-light: #58d68d;
      --border-radius: 12px;
      --box-shadow: 0 6px 15px rgba(0, 0, 0, 0.08);
      --transition: all 0.3s ease;
      --gradient: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    }

    /* الوضع الفاتح */
    [data-theme="light"] {
      --bg-color: #f5f7fa;
      --bg-secondary: #ffffff;
      --text-color: #343a40;
      --text-secondary: #6c757d;
      --border-color: #e9ecef;
      --header-bg: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
      --card-shadow: 0 6px 15px rgba(0, 0, 0, 0.08);
      --input-bg: #f8f9fa;
    }

    /* الوضع المظلم */
    [data-theme="dark"] {
      --bg-color: #1a1d23;
      --bg-secondary: #2d333b;
      --text-color: #e9ecef;
      --text-secondary: #adb5bd;
      --border-color: #444c56;
      --header-bg: linear-gradient(135deg, #1e3a5f, #0d1b2a);
      --card-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
      --input-bg: #3b424c;
    }
    
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      transition: background-color 0.3s ease, color 0.3s ease;
    }
    
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background-color: var(--bg-color);
      color: var(--text-color);
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: 20px;
      line-height: 1.6;
    }
    
    .container {
      width: 100%;
      max-width: 900px;
      background-color: var(--bg-secondary);
      border-radius: var(--border-radius);
      box-shadow: var(--card-shadow);
      overflow: hidden;
      margin: 0 auto;
      position: relative;
    }
    
    header {
      background: var(--header-bg);
      color: white;
      padding: 30px 25px;
      text-align: center;
      position: relative;
      overflow: hidden;
    }
    
    header::before {
      content: '';
      position: absolute;
      top: 0;
      right: 0;
      width: 100%;
      height: 100%;
      background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" preserveAspectRatio="none"><path d="M0,0 L100,0 L100,100 Z" fill="rgba(255,255,255,0.1)"/></svg>');
      background-size: cover;
      pointer-events: none;
    }
    
    .theme-toggle {
      position: absolute;
      top: 20px;
      left: 20px;
      background-color: rgba(255, 255, 255, 0.2);
      color: white;
      border: none;
      width: 45px;
      height: 45px;
      border-radius: 50%;
      cursor: pointer;
      transition: var(--transition);
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.2rem;
    }
    
    .theme-toggle:hover {
      background-color: rgba(255, 255, 255, 0.3);
      transform: rotate(30deg);
    }
    
    header h1 {
      font-size: 2rem;
      margin-bottom: 10px;
      font-weight: 700;
      position: relative;
    }
    
    header p {
      font-size: 1.1rem;
      opacity: 0.9;
      max-width: 600px;
      margin: 0 auto;
    }
    
    .content {
      padding: 40px 30px;
    }
    
    .content h2 {
      text-align: center;
      margin-bottom: 30px;
      color: var(--text-color);
      font-weight: 600;
      font-size: 1.6rem;
    }
    
    .device-selection {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 25px;
      margin-bottom: 40px;
    }
    
    .device-btn {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      width: 180px;
      height: 180px;
      background-color: var(--bg-color);
      border: 2px solid var(--border-color);
      border-radius: var(--border-radius);
      cursor: pointer;
      transition: var(--transition);
      padding: 20px;
      position: relative;
      overflow: hidden;
    }
    
    .device-btn::before {
      content: '';
      position: absolute;
      top: 0;
      right: 0;
      width: 100%;
      height: 5px;
      background: var(--gradient);
      transform: scaleX(0);
      transition: transform 0.3s ease;
    }
    
    .device-btn:hover {
      transform: translateY(-8px);
      box-shadow: var(--card-shadow);
      border-color: var(--primary-color);
    }
    
    .device-btn:hover::before {
      transform: scaleX(1);
    }
    
    .device-btn i {
      font-size: 3.5rem;
      margin-bottom: 20px;
      color: var(--primary-color);
      transition: var(--transition);
    }
    
    .device-btn:hover i {
      transform: scale(1.1);
    }
    
    .device-btn span {
      font-weight: bold;
      font-size: 1.2rem;
      color: var(--text-color);
    }
    
    .form-section {
      display: none;
      background-color: var(--bg-color);
      padding: 30px;
      border-radius: var(--border-radius);
      margin-top: 20px;
      animation: fadeIn 0.5s ease;
      border-top: 5px solid var(--primary-color);
      box-shadow: var(--card-shadow);
    }
    
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(15px); }
      to { opacity: 1; transform: translateY(0); }
    }
    
    .form-section h3 {
      margin-bottom: 25px;
      color: var(--text-color);
      text-align: center;
      font-size: 1.4rem;
      font-weight: 600;
    }
    
    .input-group {
      margin-bottom: 25px;
    }
    
    .input-group input {
      width: 100%;
      padding: 18px;
      border: 2px solid var(--border-color);
      border-radius: var(--border-radius);
      font-size: 1.1rem;
      transition: var(--transition);
      background-color: var(--input-bg);
      color: var(--text-color);
    }
    
    .input-group input:focus {
      border-color: var(--primary-color);
      outline: none;
      box-shadow: 0 0 0 4px rgba(52, 152, 219, 0.15);
      background-color: var(--bg-secondary);
    }
    
    .submit-btn {
      background: var(--gradient);
      color: white;
      border: none;
      padding: 18px 30px;
      border-radius: var(--border-radius);
      font-size: 1.2rem;
      font-weight: bold;
      cursor: pointer;
      transition: var(--transition);
      width: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 10px;
      box-shadow: 0 4px 10px rgba(52, 152, 219, 0.3);
    }
    
    .submit-btn:hover {
      transform: translateY(-3px);
      box-shadow: 0 8px 15px rgba(52, 152, 219, 0.4);
    }
    
    .phone-style .input-group input,
    .phone-style .submit-btn {
      font-size: 18px;
      padding: 20px;
    }
    
    .desktop-style .input-group input {
      max-width: 500px;
      margin: 0 auto;
      display: block;
    }
    
    .desktop-style .submit-btn {
      max-width: 500px;
      margin: 0 auto;
      display: block;
    }
    
    footer {
      text-align: center;
      margin-top: 40px;
      color: var(--text-secondary);
      font-size: 0.9rem;
      padding: 20px;
      width: 100%;
    }
    
    .pulse {
      animation: pulse 2s infinite;
    }
    
    @keyframes pulse {
      0% {
        transform: scale(1);
      }
      50% {
        transform: scale(1.05);
      }
      100% {
        transform: scale(1);
      }
    }
    
    @media (max-width: 768px) {
      .device-btn {
        width: 160px;
        height: 160px;
      }
      
      .device-btn i {
        font-size: 3rem;
      }
      
      header h1 {
        font-size: 1.7rem;
      }
      
      .content {
        padding: 30px 20px;
      }
      
      .content h2 {
        font-size: 1.4rem;
      }
    }
    
    @media (max-width: 576px) {
      .device-btn {
        width: 140px;
        height: 140px;
      }
      
      .device-btn i {
        font-size: 2.5rem;
      }
      
      header h1 {
        font-size: 1.5rem;
      }
      
      .form-section {
        padding: 20px;
      }
      
      .theme-toggle {
        top: 15px;
        left: 15px;
        width: 40px;
        height: 40px;
      }
    }
  </style>
</head>
<body data-theme="light">
  <div class="container">
    <header>
      <button class="theme-toggle" id="themeToggle">
        <i class="fas fa-moon"></i>
      </button>
      <h1>معمل التحاليل الطبية</h1>
      <p>خدمة الاستعلام عن نتائج التحاليل عبر الإنترنت</p>
    </header>
    
    <div class="content">
      <h2>يرجى اختيار نوع الجهاز</h2>
      
      <div class="device-selection">
        <div class="device-btn pulse" onclick="showForm('phone')">
          <i class="fas fa-mobile-alt"></i>
          <span>الدخول من الهاتف</span>
        </div>
        <div class="device-btn pulse" onclick="showForm('desktop')">
          <i class="fas fa-laptop"></i>
          <span>الدخول من الكمبيوتر</span>
        </div>
      </div>
      
      <div id="form" class="form-section">
        <h3>أدخل رقم الهاتف لعرض نتيجتك</h3>
        <form method="POST" action="/result" onsubmit="return validatePhone()">
          <div class="input-group">
            <input type="text" name="phone" id="phoneInput" placeholder="رقم الهاتف (10 أو 11 رقم)" required>
          </div>
          <button type="submit" class="submit-btn">
            <i class="fas fa-search"></i> عرض النتيجة
          </button>
        </form>
      </div>
    </div>
  </div>
  
  <footer>
      <p>© 2025 معمل بواسطة جون. جميع الحقوق محفوظة.</p>
  </footer>

  <script>
    function showForm(device) {
      const formSection = document.getElementById('form');
      const input = document.getElementById('phoneInput');
      formSection.style.display = 'block';

      // إزالة كل الكلاسات
      formSection.classList.remove('phone-style', 'desktop-style');

      // إضافة كلاس حسب الجهاز
      if (device === 'phone') {
        formSection.classList.add('phone-style');
      } else {
        formSection.classList.add('desktop-style');
      }
      
      // وضع التركيز على حقل الإدخال
      input.focus();
    }

    function validatePhone() {
      const input = document.getElementById('phoneInput').value;
      const cleanedInput = input.replace(/\D/g, '');
      const isValid = /^[0-9]{10,11}$/.test(cleanedInput);
      
      if (!isValid) {
        alert("من فضلك أدخل رقم هاتف صحيح (10 أو 11 رقم).");
        return false;
      }
      
      // تحديث قيمة الحقل بالأرقام فقط
      document.getElementById('phoneInput').value = cleanedInput;
      return true;
    }

    // تبديل الوضع المظلم/الفاتح
    const themeToggle = document.getElementById('themeToggle');
    const body = document.body;
    
    themeToggle.addEventListener('click', () => {
      const currentTheme = body.getAttribute('data-theme');
      const newTheme = currentTheme === 'light' ? 'dark' : 'light';
      
      body.setAttribute('data-theme', newTheme);
      
      // تحديث الأيقونة
      const icon = themeToggle.querySelector('i');
      if (newTheme === 'dark') {
        icon.classList.remove('fa-moon');
        icon.classList.add('fa-sun');
      } else {
        icon.classList.remove('fa-sun');
        icon.classList.add('fa-moon');
      }
      
      // حفظ التفضيل في التخزين المحلي
      localStorage.setItem('theme', newTheme);
    });
    
    // تحميل التفضيل المحفوظ
    document.addEventListener('DOMContentLoaded', () => {
      const savedTheme = localStorage.getItem('theme') || 'light';
      body.setAttribute('data-theme', savedTheme);
      
      const icon = themeToggle.querySelector('i');
      if (savedTheme === 'dark') {
        icon.classList.remove('fa-moon');
        icon.classList.add('fa-sun');
      }
    });
  </script>
</body>
</html>
